# Import Assignment 6 data (tab- or space-delimited)
# Choose the file interactively in a dialog.
student6 <- read.table(file.choose(), header = TRUE, sep = ",", stringsAsFactors = FALSE)

# See if it loaded
head(student6)
##      Name Age    Sex Grade
## 1    Raul  25   Male    80
## 2  Booker  18   Male    83
## 3   Lauri  21 Female    90
## 4  Leonie  21 Female    91
## 5 Sherlyn  22 Female    85
## 6 Mikaela  20 Female    69
# Load plyr and compute mean Grade by Sex
library(plyr)
gender_mean <- ddply(
  student6,
  "Sex",
  summarise,
  GradeAverage = mean(Grade, na.rm = TRUE)
)

# Write the grouped means to a text file
write.table(
  gender_mean,
  file = "gender_mean.txt",
  sep  = "\t",
  row.names = FALSE
)

# Verify it exists
file.exists("gender_mean.txt")
## [1] TRUE
# Select rows where Name contains “i” or “I”
i_students <- subset(
  student6,
  grepl("i", Name, ignore.case = TRUE)
)

# Extract just the names and write them to a CSV
write.csv(
  i_students$Name,
  file      = "i_students.csv",
  row.names = FALSE,
  quote     = FALSE
)

# Verify it exists
file.exists("i_students.csv")
## [1] TRUE
# Save the full filtered data frame to a CSV
write.csv(
  i_students,
  file      = "i_students_full.csv",
  row.names = FALSE
)

# Verify it exists
file.exists("i_students_full.csv")
## [1] TRUE
